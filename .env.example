# =============================================================================
# Lux Exchange - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
#
# For local development:
#   1. Run: ./scripts/local-setup.sh
#   2. Contract addresses will be auto-populated in .env.local

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App URL (used for OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# WALLET CONNECTION
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# =============================================================================
# CHAIN CONFIGURATION
# =============================================================================

# Chain ID (31337 = local, 96368 = testnet, 96369 = mainnet)
NEXT_PUBLIC_CHAIN_ID=31337

# Network name for display
NEXT_PUBLIC_NETWORK_NAME=Lux Local

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# Local node (for development)
NEXT_PUBLIC_LOCAL_RPC_URL=http://localhost:9650/ext/bc/C/rpc

# Lux Network RPC
NEXT_PUBLIC_LUX_RPC_URL=https://api.lux.network/rpc

# Lux Testnet RPC
NEXT_PUBLIC_LUX_TESTNET_RPC_URL=https://api.lux-test.network/rpc

# Zoo Network RPC
NEXT_PUBLIC_ZOO_RPC_URL=https://api.zoo.network/rpc

# Ethereum RPC (for bridge)
NEXT_PUBLIC_ETHEREUM_RPC_URL=

# =============================================================================
# G-CHAIN (GraphQL) - Replaces traditional subgraphs
# =============================================================================

# G-Chain GraphQL endpoint for local development
NEXT_PUBLIC_GCHAIN_GRAPHQL_URL=http://localhost:9650/ext/bc/G/graphql

# G-Chain endpoint for production
NEXT_PUBLIC_GCHAIN_PRODUCTION_URL=https://api.lux.network/graphql

# =============================================================================
# CONTRACT ADDRESSES (auto-populated by local-setup.sh)
# =============================================================================

# Core tokens
NEXT_PUBLIC_WLUX_ADDRESS=
NEXT_PUBLIC_LUSD_ADDRESS=
NEXT_PUBLIC_WETH_ADDRESS=

# AMM contracts
NEXT_PUBLIC_V2_FACTORY_ADDRESS=
NEXT_PUBLIC_V2_ROUTER_ADDRESS=

# Utility contracts
NEXT_PUBLIC_MULTICALL_ADDRESS=

# =============================================================================
# DATABASE (for API/backend)
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://exchange:exchange_local_dev@localhost:5432/exchange

# =============================================================================
# REDIS (for caching)
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable testnet networks in UI
NEXT_PUBLIC_ENABLE_TESTNETS=false

# Enable local network in UI (for development)
NEXT_PUBLIC_ENABLE_LOCAL=true

# =============================================================================
# ANALYTICS (optional)
# =============================================================================

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# =============================================================================
# ERROR TRACKING (optional)
# =============================================================================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# API KEYS (optional)
# =============================================================================

# CoinGecko API key (for price data)
COINGECKO_API_KEY=

# Alchemy API key (for ENS resolution)
ALCHEMY_API_KEY=

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Node environment
NODE_ENV=development

# Debug logging
DEBUG=

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================

# These are used by compose.local.yml

# Node ports
NODE_HTTP_PORT=9650
NODE_STAKING_PORT=9651

# Database
POSTGRES_PORT=5432
POSTGRES_USER=exchange
POSTGRES_PASSWORD=exchange_local_dev
POSTGRES_DB=exchange

# Redis
REDIS_PORT=6379

# Exchange app
EXCHANGE_PORT=3000

# Network ID for local node
NETWORK_ID=31337
